<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC ".//mybatis.org/DTD Mapper3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.hacking02_sk.mapper.BankingMapper">
    <select id="myid" resultType="bank" parameterType="java.lang.String">
        select * from myacc where myid = '${myid}'
    </select>
    <select id="myacc" resultType="bank" parameterType="java.lang.Integer">
        select * from myacc where myacc = '${myacc}'
    </select>
    <update id="addmoney" parameterType="java.lang.Integer">
        update myacc set mymoney = mymoney + ${money}  where myacc = '${sendacc}'
    </update>
    <update id="submoney" parameterType="java.lang.Integer">
        update myacc set mymoney = mymoney - ${money}  where myacc = '${sendacc}'
    </update>
</mapper>